Public Sub Dupli2()

  Dim chemin, ty As String 
  Dim res As Result
  Dim filename As String
  Dim path_url As String
  Dim LastInsertId As Long
  
  imp.NumCopies = 1
  imp.OutputFile = User.Home & "/tmp/Facture.pdf"
  edit.Print(imp)
  resent.MoveFirst
  If resent!imp = 1 Then Return
  ty = nom()
  If sauvpdf Then
    Chemin = pdfchemin & "/Fac/" & $numcli
    If Not Exist(chemin) Then Try Mkdir chemin
    Chemin &= "/" & Format(Year($dtedoc.G), "0000")
    If Not Exist(chemin) Then Try Mkdir chemin
    If Not pdfannu Then
      Chemin &= "/" & Format(Month($dteech.G), "00")
      If Not Exist(chemin) Then Try Mkdir chemin
    Endif
    imp.OutputFile = chemin & "/" & ty & ".pdf"
    imp.NumCopies = 1
    edit.Print(imp)
    filename = File.Name(chemin & "/" & ty & ".pdf")
    path_url = "file://" & chemin & "/" & ty & ".pdf"
    utils.db.Begin
    LastInsertId = InsDoc(filename, path_url, LGed.Clients)
    If choix = ObjFac.facture Or choix = ObjFac.finmois Then
      InsTag(LastInsertId, [$numcli, $numfac])
    Else
      InsTag(LastInsertId, [$numcli, $numbl])
    Endif
    If choix = ObjFac.facture Or choix = ObjFac.finmois Then
      LastInsertId = InsDoc(filename, path_url, LGed.Comptabilite)
      InsTag(LastInsertId, [Str(numeroecr)])
    Endif
    utils.db.Commit
  Else
      chemin = User.Home & "/Impressions"
      imp.OutputFile = chemin & "/" & ty & ".pdf"
      imp.NumCopies = 1
      edit.Print(imp)
  Endif
    
End

Private Sub InsDoc(filename As String, path_url As String, type As Integer) As Long
  
  Dim res As Result
  Dim LastInsertId As Long
  
  res = Utils.db.Edit("Docs_Ged", "code=&1 AND filename=&2 AND type=&3", $numcli, filename, type)
  If Not res.Available Then 
    res = utils.db.Create("Docs_Ged")
    res!type = type
    res!code = $numcli
    res!origin = "Facs"
    res!url = path_url
    res!filename = filename
    res!mime = "application/pdf"
  Else
    LastInsertId = res!lind
  Endif
  res!date = $dtedoc.G
  res!ttc = montttc
  res!ht = montht
  res.Update
  If LastInsertId = 0 Then LastInsertId = utils.db.LastInsertId
  Return LastInsertId
  
End

Private Sub InsTag(LastInsertId As Long, tag As String[])
  
  Dim txt As String
  Dim rReq, res As Result
  Dim LastInsertId_tag As Long
  
  For Each txt In tag
    If IsNull(txt) Or txt = "0" Then Continue
    rReq = Utils.db.Exec("Select * From Fiches_Tag where tag = &1", txt)
    If rReq.Available Then
      Try Utils.db.Exec("INSERT INTO Docs_Tag (doc_lind, tag_lind) values (&1,&2)", LastInsertId, rReq!lind)
    Else
      res = utils.db.Create("Fiches_Tag")
      res!tag = txt
      res.Update
      LastInsertId_tag = utils.db.LastInsertId
      Utils.db.Exec("INSERT INTO Docs_Tag (doc_lind, tag_lind) values (&1,&2)", LastInsertId, LastInsertId_tag)
    Endif
  Next
  
End

Private Function nom() As String
  
  Dim ty As String
  Dim reg As RegExp
  
  Select Case choix
    Case ObjFac.facture, ObjFac.finmois, ObjFac.abonnement
      ty = "F" & $numfac
    Case ObjFac.bl
      ty = "B" & $numbl
    Case ObjFac.commande
      ty = "C" & $numbl
    Case ObjFac.proforma
      ty = "P" & $numbl
    Case ObjFac.devis
      ty = "D" & $numbl
  End Select
 
  reg = New RegExp
  ty = ty & reg.Replace(adrfac.nom, "[ /']", "")
  ty = reg.Replace(ty, "[()]", "_")
  Return ty
  
End

'*********************comptabilitée**********************
Public Function ecriturecompt() As Boolean
  
  Dim lg As VarEcr
  Dim ecr As EcrAuto
  Dim rescomp As Result
  
  resent.MoveFirst()
  If Not IsNull(resent!numtick) Then
    Message.Error("Document en attente de moulinage ...\n le BL est noté règlé par le ticket " & resent!numtick)
    Return True
  Endif
  lignecom = New VarEcr
  For Each lg In ecrit
    lignecom.plus(lg)
  Next
  lignecom.type = VarEcr.L_ajou
  lignecom.etat = VarEcr.Vente
  lignecom.dte = $dtedoc
  ecr = New EcrAuto("", lignecom)
  If ecr.ecriture() Then Return True
  $numfac = ecr.numfac
  numeroecr = ecr.numecr
  If choix = ObjFac.facture Then
    rescomp = utils.db.Edit("Fiches_Bl", "numbl=&1", $numbl)
    rescomp!numfac = ecr.numfac
    rescomp!imp = 1
    rescomp!dtefac = $dtedoc.G
    rescomp!ech = $dteech.G
    rescomp.Update
    MajSuivis()
  Endif
  Return False
  
End

'maj du suivis des affaires
Private Sub MajSuivis()

  Dim rSuivi As Result

  resent.MoveFirst
  Repeat
    
    rSuivi = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabSuivis") & " WHERE numdev = &1 and code = &2", resent!numbl, $numcli)
    If rSuivi.Available Then Utils.db.Exec("UPdate  " & Cbase.Table("TabSuivis") & "  SET  numfac= &1, datefac = &2 WHERE numdev = &3 and code = &4", $numfac, $dtedoc.G, resent!numbl, $numcli)
    
  Until resent.MoveNext()
  
End

Public Sub edite_Click()
  
  Dim tri As String
  
  Select Case $choix
    Case ObjFac.finmois, ObjFac.abonnement
      If Tnum.Value Then tri = " code "
      If Tnom.Value Then
        If tri Then tri &= ",nom " Else tri = " nom "
      Endif
      If Tcp.Value Then
        If tri Then tri &= ",cp " Else tri = " cp "
      Endif
      If Pville.Value Then
        If tri Then tri &= ",ville " Else tri = " ville "
      Endif
      If tri Then tri = " ORDER BY" & tri 
      $vfac.editefm(False, tri)
      Me.Close
    Case ObjFac.facture
      $vfac.editef()
    Case Else
      $vfac.editebl()
  End Select

End


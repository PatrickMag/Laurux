Public Sub Aff_date()

  Dim rResult As Result

  Tab = "Fiches_Parametres"
  With Utils
    rResult = Utils.db.Exec("SELECT * FROM " & Tab & " ")
    If Not rResult.Available Then
      Message.Warning("Veuillez completez la table des parametres généraux SVP avant de faire vos clotures", "OK")
      Start.UnLock()
      Utils.fermeTunnel()
      Utils.db.Close
      Quit
    Else
      If IsNull(rResult!dtepec) Or If Left$(rResult!dtepec, 2) = "00" Then
        Dtpc = New LDate(Now)
      Else
        Dtpc = New LDate("01." & rResult!dtepec)
      Endif
      If IsNull(rResult!dtepp) Or If Left$(rResult!dtepp, 2) = "00" Then
        Dtepp = New LDate(Now)
      Else
        Dtepp = New LDate("01." & rResult!dtepp)
      Endif

      Dateprc.Text = "  " & Format(Dtepp.G, "mmmm  yyyy")
      datecl.Text = "  " & Format(dtpc.G, "mmmm  yyyy")
    Endif
  End With

End

